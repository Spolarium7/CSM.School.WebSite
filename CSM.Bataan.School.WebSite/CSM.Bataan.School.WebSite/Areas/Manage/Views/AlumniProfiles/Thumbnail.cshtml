@model CSM.Bataan.School.WebSite.Areas.Manage.ViewModels.AlumniProfiles.ThumbnailViewModel
@{
    Layout = "~/Areas/Manage/Views/Shared/_managelayout.cshtml";
}

<!DOCTYPE html>



<h2>Alumni Profile Thumbnail</h2>
<div class="row">
    <div class="hero-unit">
        <form action="~/manage/alumniprofiles/update-thumbnail" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" name="AlumniProfileId" value="@Model.AlumniProfileId" />
                <label for="Thumbnail">Thumbnail:</label><br />
                <img src="~/images/alumniprofiles/@Model.AlumniProfileId/thumbnail.png" style="width:150px;height:150px;" /></br></br>
                <input type="file" class="form-control" name="thumbnail" />
                @Html.ValidationSummary()
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn-primary" value="Upload" />
                    <a href="~/manage/alumniprofiles/index"><input type="button" class="btn-primary" value="Home" /></a>
                </div>
            </div>
        </form>
    </div>
</div>

