@model CSM.Bataan.School.WebSite.Areas.Manage.ViewModels.AlumniProfiles.UpdateTitleViewModel
@{
    Layout = "~/Areas/Manage/Views/Shared/_managelayout.cshtml";
}


<h2>Update Title</h2>


<div class="row">
    <div class="hero-unit">
        <form action="~/manage/alumniprofiles/update-company" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <input type="hidden" name="AlumniProfileId" value="@Model.AlumniProfileId" />

                <label for="Title">Title:</label>
                <input id="title" type="text" class="form-control" name="Title" value="@Model.Company" />
            </div>
            <div class="form-group">
                <label for="Position">Position</label>
                <textarea id="position" name="Description">@Model.Position</textarea>
            </div>

            <div class="form-group">
                <label for="Location">Location</label>
                <textarea id="location" name="Location" >@Model.Location</textarea>
            </div>

            <div class="form-group">
                <label for="FromDate">From Date</label>
                <textarea id="fromdate" name="FromDate">@Model.FromDate</textarea>
            </div>

            <div class="form-group">
                <label for="ToDate">To Date</label>
                <textarea id="todate" name="ToDate" >@Model.ToDate</textarea>
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="~/manage/alumniprofiles/Index" class="btn btn-danger">Cancel</a>
        </form>
    </div>
</div>
