@model CSM.Bataan.School.WebSite.Areas.Manage.ViewModels.Shared.UpdateContentViewModel

@{
    Layout = "~/Areas/Manage/Views/Shared/_forms.cshtml";
}

<h3>Update News <strong>@Model.Title</strong></h3>

<div class="row">
    <div class="col-md-7">
        <form action="~/manage/news/update-content" method="post">
            @Html.ValidationSummary()
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label for="Content">Content</label>
                <textarea id="content" name="Content" style="height:800px;width:700px;">@Model.Content</textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>

        </form>
    </div>
</div>


<!--MODAL-->
<div class="modal" tabindex="-1" role="dialog" id="modal-attach-image">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Attach an image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Please select the image you want to attach.</p>
                <input type="file" class="form-control" name="image" id="attachedImage" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="attachImage()">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>


@section pageScripts{
    <script>
        attachImageUrl = "/manage/news/attach-image";
    </script>
    <script src="~/js/sceditor.js"></script>
}
@section pageScriptsTop{
    <link rel="stylesheet" href="~/vendor/sceditor/themes/default.min.css" id="theme-style" />
    <script src="~/vendor/sceditor/sceditor.min.js"></script>
    <script src="~/vendor/sceditor/icons/monocons.js"></script>
    <script src="~/vendor/sceditor/formats/bbcode.js"></script>
    <link href="~/css/sceditor.css" rel="stylesheet" type="text/css" />
}