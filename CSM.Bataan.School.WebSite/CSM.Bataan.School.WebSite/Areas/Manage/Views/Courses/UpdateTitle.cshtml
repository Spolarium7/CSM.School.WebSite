@model CSM.Bataan.School.WebSite.Areas.Manage.ViewModels.Courses.UpdateTitleViewModel

@{
    Layout = "~/Areas/Manage/Views/Shared/_managelayout.cshtml";
}


<h2>UpdateTitle</h2>


<div class="row">
    <div class="hero-unit">
        <form action="~/manage/courses/update-title" method="post">
            @Html.ValidationSummary()
            <input type="hidden" name="CourseId" value="@Model.Id" />

            <div class="form-group">
                <label for="Title">Title</label>
                <textarea id="title" name="Title" style="height:300px;width:300px;">@Model.Title</textarea>
            </div>

            <div class="form-group">
                <label for="Title">Title</label>
                <textarea id="title" name="Title" style="height:300px;width:300px;">@Model.Description</textarea>
            </div>
            <div class="form-group">
                <label for="PostExpiry">Post Expiry:</label>
                <input type="text" class="form-control" name="PostExpiry" id="UpdatedAt" value="@Model.PostExpiry" />
            </div>



            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="~/manage/courses/Index" class="btn btn-danger">Cancel</a>
        </form>
    </div>
</div>