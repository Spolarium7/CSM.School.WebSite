@model CSM.Bataan.School.WebSite.Areas.Manage.ViewModels.Courses.UpdateYearCourseCodeViewModel

@{
    Layout = "~/Areas/Manage/Views/Shared/_managelayout.cshtml";
}


<h2>UpdateYearCourseCode</h2>


<div class="row">
    <div class="hero-unit">
        <form action="~/manage/courses/update-yearcoursecode" method="post">
            @Html.ValidationSummary()
            <input type="hidden" name="CourseId" value="@Model.CourseId" />

            <div class="form-group">
                <label for="Year">Year</label>
                <textarea id="year" name="Year">@Model.Year</textarea>
            </div>

            <div class="form-group">
                <label for="CourseCode">Course Code</label>
                <textarea id="coursecode" name="CourseCode">@Model.CourseCode</textarea>
            </div>



            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="~/manage/courses/Index" class="btn btn-danger">Cancel</a>
        </form>
    </div>
</div>