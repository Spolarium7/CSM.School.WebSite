@model CSM.Bataan.School.WebSite.Areas.Manage.ViewModels.Groups.UpdateViewModel
@{
    ViewData["Title"] = "Update Group";
    Layout = "~/areas/manage/views/shared/_forms.cshtml";
}
<div class="card-header"><a href="~/manage/groups"><span class="fa fa-arrow-left"></span> back</a></div>
<div class="card-body">
    <div class="card-title">
        <h3 class="text-center title-2">Update Group</h3>
    </div>
    <hr>
    <form action="~/manage/groups/update" method="post">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="form-group">
            <input type="hidden" name="Id" value="@Model.Id"/>
            <label for="name" class="control-label mb-1">Name</label>
            <input type="text" class="form-control" id="name" name="Name" aria-describedby="nameHelp" placeholder="Enter name" value="@Model.Name">
        </div>
        <div class="form-group">
            <label for="description" class="control-label mb-1">Description</label>
            <textarea class="form-control" id="description" name="Description" placeholder="Description">
                @Model.Description
            </textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="~/manage/groups" class="btn btn-danger">Cancel</a>
    </form>
</div>