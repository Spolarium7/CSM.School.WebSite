@model CSM.Bataan.School.WebSite.Areas.Manage.ViewModels.SchoolFacilities.UpdateContentViewModel
@{
    Layout = "~/Areas/Manage/Views/Shared/_managelayout.cshtml";
}

<h2>Update SchoolFacility Post "@Model.Title"</h2>

<div class="row">
    <div class="col-md-6">
        <form action="~/manage/schoolfacilities/update-content" method="post">
            @Html.ValidationSummary()
            <input type="hidden" name="SchoolFacilityId" value="@Model.SchoolFacilityId" />
            <div class="form-group">
                <label for="Content">Content</label>
                <textarea id="content" name="Content" style="height:800px;width:700px;">@Model.Content</textarea>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>

