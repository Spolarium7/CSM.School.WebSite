@model CSM.Bataan.School.WebSite.Areas.Manage.ViewModels.Researches.UpdateTitleViewModel
@{
    Layout = "~/Areas/Manage/Views/Shared/_managelayout.cshtml";
}


<h2>Update Title</h2>

<div class="row">
    <div class="col-md-6">
        <form action="~/manage/researches/update-question" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <input type="hidden" name="Id" value="@Model.Id" />
                <label for="Title">Title:</label>
                <input id="title" type="text" class="form-control" name="Title" value="@Model.Title" />
            </div>
          
            <div class="form-group">
                <label for="Post Expiry">Post Expiry:</label>
                <input type="text" class="form-control" name="PostExpiry" id="Post Expiry" value="@Model.PostExpiry" />
            </div>

           

            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="~/manage/researches/Index" class="btn btn-danger">Cancel</a>
        </form>
    </div>
</div>

@section pageScripts{
    <script>
        $(function () {
            $("#PostExpiry").datepicker({ dateFormat: 'dd/mm/yy' });
        });
    </script>
}