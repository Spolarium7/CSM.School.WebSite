@model CSM.Bataan.School.WebSite.Areas.Manage.ViewModels.SchoolEvents.BannerViewModel
@{
    Layout = "~/Areas/Manage/Views/Shared/_managelayout.cshtml";
}

<h2>School Event Banner</h2>
<div class="row">
    <div class="col-md-6">
        <form action="~/manage/schoolevents/update-banner" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" name="SchoolEventId" value="@Model.SchoolEventId" />
                <label for="Banner">Banner:</label><br />
                <img src="~/schoolevents/@Model.SchoolEventId/banner.png" style="max-width:750px;max-height:300px;" /></br></br>
                <input type="file" class="form-control" name="banner" />
                @Html.ValidationSummary()
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>