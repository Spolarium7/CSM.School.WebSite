@model CSM.Bataan.School.WebSite.Areas.Manage.ViewModels.SchoolEvents.ThumbnailViewModel
@{
    Layout = "~/Areas/Manage/Views/Shared/_managelayout.cshtml";
}

<h2>School Event Thumbnail</h2>
<div class="row">
    <div class="col-md-6">
        <form action="~/manage/schoolevents/update-thumbnail" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" name="SchoolEventId" value="@Model.SchoolEventId" />
                <label for="Thumbnail">Thumbnail:</label><br />
                <img src="~/schoolevents/@Model.SchoolEventId/thumbnail.png" style="width:150px;height:150px;" /></br></br>
                <input type="file" class="form-control" name="thumbnail" />
                @Html.ValidationSummary()
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn-primary" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>