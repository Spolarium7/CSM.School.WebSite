@model CSM.Bataan.School.WebSite.ViewModels.Thread.IndexViewModel
@using CSM.Bataan.School.WebSite.Infrastructure.Security;
@using CSM.Bataan.School.WebSite.Infrastructure.Data.Models;

@{
    Layout = "~/Areas/Manage/Views/Shared/_managelayout.cshtml";
}


<section id="thread-container">
    <h3><a href="#">Threads</a></h3>

                        @{

                            foreach (Thread thread in Model.Threads)
                            {

                                <div class="row">
                                    <div class="span6">
                                        <div class="post-image">
                                            <a href="#"><img src="~/threads/@thread.Id/banner.png" style="height:350px; width:1200px;" alt="@thread.UserId" /></a>
                                        </div>
                                    </div>
                                    <div class="span6">
                                        <h3>@thread.Title</h3>
                                        <div class="clearfix">
                                        </div>
                                        <dl>
                                            <dd class="info-line"><span class="time">@thread.Timestamp.ToString("dddd, dd MMMM yyyy hh:mm tt")</span></dd>
                                            <dd> @thread.Description</dd>

                                        </dl>
                                        <a href="~/threads/@thread.Id"><button class="btn btn-primary">Read More </button></a>

                                    </div>
                                </div>

                                <!-- end article 1 -->
                            }


                        }

                    </div>
                </article>

            </div>
            <div class="span4">

            </div>
        </div>
    </div>
</section>


@section pageScripts{`
    <script src="~/js/date_format.js"></script>
    <script>
    var page = @("1");
    var calling = false;
    $(window).scroll(function () {
        if (($(window).height() + $(window).scrollTop()) + 1
            >= $(document).height()) {

            if (calling == false) {
                calling = true;
                $.ajax({
                    type: "GET",
                    url: "/threads/feed?pageIndex=" + (page + 1),
                    success: function (rsp) {
                        page = page + 1;
                        calling = false;
                        $.each(rsp, function (index, item) {
                            var itemTimestamp = new Date(Date.parse(item.timestamp));
                            var markup = "<div class='row'>";
                            markup = markup + "<div class='span6'>";
                            markup = markup + "<div class='post-image'>";   
                            markup = markup + "<a href='#'><img src='../threads/" + item.id + "/banner.png'  style='height:350px; width:1200px;' alt="+ item.id +"/></a>";
                            markup = markup + "</div>";
                            markup = markup + "</div>";
                            markup = markup + " <div class='span6'>";
                            markup = markup + "<h3>" + item.title + "</h3>";
                            markup = markup + "  <div class='clearfix'>";
                            markup = markup + "</div>";
                            markup = markup + "<dl>";
                            markup = markup + "<p class='info-line'><span class='time'>" + itemTimestamp.format("dddd, dd MMMM yyyy hh:mm tt") + "</span></dd>";
                            markup = markup + "<dd>" + item.description + "</dd>";
                            markup = markup + "</dl>";
                            markup = markup + "<a href='~/threads/" + item.Id + "><button class='btn btn-primary'>Read More</button></a>";
                            markup = markup + "</div>";
                            markup = markup + "</div>";

                            $("#thread-container").append(markup);
                        });
                    }
                });
            }
        }
    });
    </script>
}