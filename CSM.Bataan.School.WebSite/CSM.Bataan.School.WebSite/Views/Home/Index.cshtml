<section class="news">
    <div class="container">
        <h2>Latest news</h2>
      
        @{

            foreach (NewsFeedItem newsItem in Model.PublicNews)
            {
                <article>
                    <div class="pic"><img src="~/images/news/@newsItem.Id/@Guid.NewGuid()/thumbnail.png" alt="@newsItem.Title" style="width:112px;height:112px;" /></div>
                    <div class="info">
                        <h4>@newsItem.Title</h4>
                        <p class="date">@newsItem.Timestamp.ToString("dd MMM yyyy"), @newsItem.UserName</p>
                        <p>@newsItem.Description</p>
                        <a class="more" href="~/news/@newsItem.Id">Read more</a>
                    </div>
                </article>
            }
        }
        <div class="btn-holder">
            <a class="btn" href="~/news/index">See more news</a>
        </div>

    </div>
    <!-- / container -->
</section>


