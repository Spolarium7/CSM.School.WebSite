@model CSM.Bataan.School.WebSite.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/areas/manage/views/shared/_forms.cshtml";
}
<div class="card-header"><a href="~/home"><span class="fa fa-arrow-left"></span> back to home</a></div>
<div class="card-body">
    <div class="card-title">
        <h3 class="text-center title-2">Forgot Password</h3>
    </div>
    <hr>
    <form action="~/account/forgot-password" method="post">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="form-group">
            <label for="emailAddress" class="control-label mb-1">Email Address</label>
            <input type="email" class="form-control" id="emailAddress" name="EmailAddress" aria-describedby="emailAddressHelp" placeholder="Enter email address">
        </div>
        <hr />
        <div class="form-group">
            <recaptcha />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="~/home/index" class="btn btn-danger">Cancel</a>
    </form>
</div>


@section pageScripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <recaptcha-script />
}