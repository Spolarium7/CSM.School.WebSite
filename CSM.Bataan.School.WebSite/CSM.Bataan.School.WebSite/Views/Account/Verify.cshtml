@model CSM.Bataan.School.WebSite.ViewModels.Account.VerifyViewModel
@{
    Layout = "~/areas/manage/views/shared/_forms.cshtml";
}
}

<h2>Verify</h2>

<div class="row">
    <div class="col-md-6">
        <form action="~/account/verify" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <label for="EmailAddress">EmailAddress:</label>
                <input type="email" class="form-control" name="EmailAddress" />
            </div>
            <div class="form-group">
                <label for="RegistrationCode">Registration Code:</label>
                <input type="password" class="form-control" name="RegistrationCode" />
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>  