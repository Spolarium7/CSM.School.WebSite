                    {
                        if (Model.Items.Count > 0)
                        {
                            foreach (NewsFeedItem item in Model.Items)
                            {
                                <article>
                                    <div class="current-date">
                                        <p>@item.Timestamp.ToString("MMMM")</p>
                                        <p class="date">@item.Timestamp.Day</p>
                                    </div>
                                    <div class="info">
                                        @{
                                            if (item.Type == ContentType.News)
                                            {
                                                <img src="~/images/news/@item.Id/@Guid.NewGuid()/banner.png" alt="@item.Title"/>
                                            }
                                         }

                                         <h4><strong>@item.Title</strong></h4>
                                        <p class="info-group-line pull-right"><span class="fa fa-users"></span> @String.Join(" | ", item.Groups.ToArray())</p>
                                        <p class="info-line">@item.UserName</p>
                                        <p>@item.Description</p>
                                    </div>
                                </article>
                            }
                        }
                    }
                    else
                    {
                        <article>
                            <div class="current-date">
                                <p>@DateTime.UtcNow.Month</p>
                                <p class="date">@DateTime.UtcNow.Day</p>
                            </div>
                            <div class="info">
