@model CSM.Bataan.School.WebSite.ViewModels.Achievers.IndexViewModel
@using CSM.Bataan.School.WebSite.Infrastructure.Security;
@using CSM.Bataan.School.WebSite.Infrastructure.Data.Models;
@{
    Layout = "~/Areas/Manage/Views/Shared/_managelayout.cshtml";
}
Welcome @WebUser.FullName

<h2>CSM ACHIEVERS</h2>
<section class="posts-con" id="post-container">
    @{
        foreach (Achiever achiever in Model.Achievers)
        {
            <div class="responsive">
                <div class="gallery">
                    <a target="_blank" href="~/achievers/@achiever.Id">
                        <img src="~/images/achievers/@achiever.Id/thumbnail.png" alt="@achiever.Title" width="600" height="400">
                    </a>
                    <a href="~/achievers/@achiever.Id"><div class="desc">@achiever.Title</div></a>
                </div>
            </div>
        }
    }



