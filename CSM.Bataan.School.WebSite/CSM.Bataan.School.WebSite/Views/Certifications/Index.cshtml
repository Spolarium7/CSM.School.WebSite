        <div class="main-content">
            <h1>Certifications</h1>
            <section class="posts-con" id="certifications">
                @{
                    if (Model.Certifications.Items != null)
                    {
                        if (Model.Certifications.Items.Count > 0)
                        {
                            foreach (Certification item in Model.Certifications.Items)
                            {
                                <article>
                                    <div class="current-date">
                                        <p>@item.StartDate.ToString("MMMM")</p>
                                        <p class="date">@item.StartDate.Day</p>
                                    </div>
                                    <div class="info">
                                        <img src="~/images/certifications/@item.Id/@Guid.NewGuid()/banner.png" alt="@item.Title" />
                                        <h4><strong>@item.Title</strong></h4>
                                        <p>@item.Description</p>
                                    </div>
                                </article>
                            }
                        }
                    }
                    else
                    {
                        <article>
                            <div class="current-date">
                                <p>@DateTime.UtcNow.Month</p>
                                <p class="date">@DateTime.UtcNow.Day</p>
                            </div>
                            <div class="info">
                                <h3>No Results Yet</h3>
                            </div>
                        </article>
                    }
                }
            </section>
            @{
                if (Model.Certifications.Items != null)
                {
                    if (Model.Certifications.Items.Count > 0)
                    {
                        <div class="col-lg-12">
                            <div class="table-responsive table--no-card m-b-30">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination">
                                        <li class="page-item"><span class="form-control-plaintext">Page&nbsp;&nbsp;&nbsp;</span></li>
                                        <li class="page-item"><input type="number" value="@Model.Certifications.PageIndex" class="form-control" style="width:50px;" onKeydown="javascript: if(event.keyCode == 13 && isNaN(parseInt($(this).val()))==false) window.location='/certifications/index?pageIndex=' + (isNaN(parseInt($(this).val())) ? 1 : parseInt($(this).val())) + '&keyword=@(Model.Certifications.Keyword)" /></li>
                                        <li class="page-item"><span class="form-control-plaintext">&nbsp;&nbsp;&nbsp;of @Model.Certifications.PageCount&nbsp;&nbsp;&nbsp;</span></li>
                                        @{
                                            var prev = Model.Certifications.PageIndex - 1;
                                            if (prev > 0)
                                            {
                                                <li class="page-item"><a class="page-link" href="~/certifications?keyword=@Model.Certifications.Keyword&pageSize=@Model.Certifications.PageSize&pageIndex=@prev"><span aria-hidden="true">&laquo;</span></a></li>
                                            }
                                        }
                                        <li class="page-item"><a class="page-link" href="#">@(Model.Certifications.PageIndex)</a></li>
                                        @{
                                            var next = Model.Certifications.PageIndex + 1;
                                            if (next <= Model.Certifications.PageCount)
                                            {
                                                <li class="page-item"><a class="page-link" href="~/certifications?keyword=@Model.Certifications.Keyword&pageSize=@Model.Certifications.PageSize&pageIndex=@next"><span aria-hidden="true">&raquo;</span></a></li>
                                            }
                                        }
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    }
                }
