@using CSM.Bataan.School.WebSite.Infrastructure.Data.Models;
@using CSM.Bataan.School.WebSite.Infrastructure.Data.Enums;
@model CSM.Bataan.School.WebSite.ViewModels.Certifications.IndexViewModel
