@using CSM.Bataan.School.WebSite.Infrastructure.Security;
@using CSM.Bataan.School.WebSite.Infrastructure.Data.Enums;

<nav class="navbar navbar-expand-lg navbar-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
        @{ 
            if (WebUser.IsAuthenticated && (WebUser.IsInRole(Role.Admin) || WebUser.IsInRole(Role.ContentAdmin))) {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Users and Groups
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="~/manage/users">Users</a>
                    <a class="dropdown-item" href="~/manage/groups">Groups</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Marketing
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="#">Courses</a>
                    <a class="dropdown-item" href="#">Ads and Promotions</a>
                    <a class="dropdown-item" href="#">Facilities</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Knowledgebase
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="#">FAQs</a>
                    <a class="dropdown-item" href="#">School Calendar</a>
                    <a class="dropdown-item" href="#">Certifications</a>
                    <a class="dropdown-item" href="#">Researches</a>
                    <a class="dropdown-item" href="#">Contact Us</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Site Content
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="~/manage/news">News</a>
                    <a class="dropdown-item" href="#">Polls</a>
                    <a class="dropdown-item" href="#">Achievers</a>
                </div>
            </li>
            }
        }
        </ul>
        <ul class="navbar-nav pull-right">
            @{
                if (WebUser.IsAuthenticated == false)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="~/account/login">Login</a>
                    </li>
                }
                else
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @WebUser.FullName
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="~/account/update-profile">My Profile</a>
                            <a class="dropdown-item" href="~/account/change-password">Change Password</a>
                            @{
                                if (WebUser.IsInGroup(Guid.Parse("bcc412a8-9169-489b-b579-301186947a20")) && !(WebUser.IsInGroup(Guid.Parse("bcc412a8-9169-489b-b579-301186947a21"))))
                                {
                                    <a class="dropdown-item" href="~/account/profile">My Alumni Profile</a>
                                }
                            }
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/account/logout">Logout</a>
                        </div>
                    </li>
                    }
                }
        </ul>
    </div>
</nav>
